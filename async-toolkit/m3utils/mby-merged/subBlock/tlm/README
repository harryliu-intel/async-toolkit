// Turnin command:
turnin -c tlm -s nhdk-x0

// env setup
alias setnhdk 'source /p/hdk/rtl/proj_tools/proj_binx/nhdk/latest/setnhdk.csh \!:*'
setnhdk -w <WORK_AREA>

// compile VCS .
simbuild

// running allive test:
trex tlm_alive_test -ace -ace_args -t tlm_alive_test:seed_1 -seed 1 -ace_args-  -dut tlm -no_flex_check -noexist

// running allive test with interactive debug 
trex tlm_alive_test -ace -ace_args -t tlm_alive_test:seed_1 -run_with_gui -seed 1 -ace_args-  -dut tlm -no_flex_check -noexist

// running test with waves:
trex tlm_alive_test -ace -ace_args -t tlm_alive_test:seed_1 -seed 1 -fsdb -ace_args-  -dut tlm -no_flex_check -noexist

//open verdi (fsdb)
cd to test dir 
rtldebug -dut tlm -fsdb <test_name> -no_vsim_ovd

// RTL Lintra
simbuild -dut tlm -s all +s lintra_compile

// DVT
simbuild # Please run simbuild first #
simbuild -dut tlm -s all +s dvt
