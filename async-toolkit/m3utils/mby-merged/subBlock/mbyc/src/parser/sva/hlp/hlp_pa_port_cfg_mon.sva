// Assumptions
`ASSUMES_MUTEXED 
  (assm_pa_port_cfg_in_v, {i_core_v,i_mgmt_v}, clk, rst_n!==1,
   `ERR_MSG("i_core_v and i_mgmt_v are not MUTEX")); 

