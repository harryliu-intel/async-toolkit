  (asrt_pa_port_cfg_out_v, 1,
   ((i_core_v & ~i_core_ctrl.b.window_err & ~i_core_ctrl.b.offset_err) | i_mgmt_v), o_ana_data_v,
   "Output valid not set correctly", clk, rst_n!==1);

