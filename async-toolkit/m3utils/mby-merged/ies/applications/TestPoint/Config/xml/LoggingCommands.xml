<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE config PUBLIC "-//Fulcrum Microsystems//DTD DefaultCommands/EN" "DefaultCommands.dtd">
<!--
    vim:autoindent:et:sw=4:ts=4:tw=79:
-->
<config>

<!-- reset -->
<command>
    <name>reset</name>

    <!-- reset logging -->
    <command>
        <name>logging</name>
        <help>Reset the logging subsystem to default state</help>
        <handler>tpHandleResetLogging</handler>
        <argument>
            <name>!&lt;cr&gt;</name>
            <help>Reset the logging subsystem</help>
        </argument>
    </command>  <!-- end reset logging -->

</command>  <!-- end reset -->

<!-- set -->
<command>
    <name>set</name>

    <!-- set logging -->
    <command>
        <name>logging</name>
        <help>Set logging sub-system properties</help>

        <!-- ==================== -->
  
        <!-- set logging category -->
        <command>
            <name>category</name>
            <help>Enable or disable specific logging categories</help>
            <description>
                Each sub-module of the FocalPoint API utilizes a distinct
                logging category so that logging may be selectively enabled
                or disabled for each sub-module individually. Use the
                'set logging category help' command to display a list
                of valid category keywords. The ALOS system of the
                FocalPoint API defines logging categories of the form, 
                "FM_LOG_CAT_XXXXX," where "XXXXX" corresponds to the category
                keyword used in these commands. See the Log Categories section 
                of <a href="#References">[1]</a> for a description of 
                each category. Multiple categories may be specified at once, 
                delimited by commas (no spaces).
            </description>
            <handler>tpHandleSetLoggingCategory</handler>
      
            <!-- set logging category enable -->
            <argument>
                <name>enable</name>
                <help>Enable logging categories</help>

                <!-- set logging category enable <categories> -->
                <argument>
                    <name>!&lt;categories&gt;</name>
                    <help>Comma-delimited list of categories or 'all'</help>
                    <argument>
                        <name>!&lt;cr&gt;</name>
                        <help>Enable specified logging categories</help>
                    </argument>
                </argument> <!-- <categories> -->
            </argument> <!-- end set logging category enable -->
      
            <!-- set logging category disable -->
            <argument>
                <name>disable</name>
                <help>Disable logging categories</help>

                <!-- set logging category disable <categories> -->
                <argument>
                    <name>!&lt;categories&gt;</name>
                    <help>Comma-delimited list of categories or 'all'</help>
                    <argument>
                        <name>!&lt;cr&gt;</name>
                        <help>Disable specified logging categories</help>
                    </argument>
                </argument> <!-- <categories> -->
            </argument> <!-- end set logging category disable -->

            <!-- set logging category help -->
            <argument>
                <name>help</name>
                <help>Display valid logging categories</help>
                <argument>
                    <name>!&lt;cr&gt;</name>
                    <help>Display valid logging categories</help>
                </argument>
            </argument> <!-- end set logging category help -->
        </command>  <!-- end set logging category -->

        <!-- ==================== -->

        <!-- set logging destination -->
        <command>
            <name>destination</name>
            <help>Set destination of log messages</help>
            <handler>tpHandleSetLoggingDestination</handler>

            <!-- set logging destination console -->
            <argument>
                <name>console</name>
                <help>Send logging messages to console</help>
                <argument>
                    <name>!&lt;cr&gt;</name>
                    <help>Send logging messages to console</help>
                </argument>
            </argument> <!-- end set logging destination console -->

            <!-- set logging destination buffer -->
            <argument>
                <name>buffer</name>
                <help>Send logging messages to memory buffer</help>

                <!-- set logging destination buffer append -->
                <argument>
                    <name>append</name>
                    <help>Append messages to destination</help>
                    <argument>
                        <name>!&lt;cr&gt;</name>
                        <help>Append logging messages to memory buffer</help>
                    </argument>
                </argument> <!-- set logging destination buffer append -->

                <!-- set logging destination buffer reset -->
                <argument>
                    <name>reset</name>
                    <help>Reset the destination</help>
                    <argument>
                        <name>!&lt;cr&gt;</name>
                        <help>Send logging messages to memory buffer</help>
                    </argument>
                </argument> <!-- set logging destination buffer reset -->
            </argument> <!-- set logging destination buffer -->

            <!-- set logging destination file -->
            <argument>
                <name>file</name>
                <help>Send logging messages to file</help>

                <!-- set logging destination file <filename> -->
                <argument>
                    <name>!&lt;filename&gt;</name>
                    <help>Name of file to receive logging messages</help>
                    <argument>
                        <name>!&lt;cr&gt;</name>
                        <help>Send logging messages to file</help>
                    </argument>
                </argument> <!-- <filename> -->
            </argument> <!-- end set logging destination file -->
        </command>  <!-- end set logging destination -->

        <!-- ==================== -->

        <!-- set logging disable -->
        <command>
            <name>disable</name>
            <help>Disable logging subsystem</help>
            <handler>tpHandleSetLoggingDisable</handler>
            <argument>
                <name>!&lt;cr&gt;</name>
                <help>Disable logging subsystem</help>
            </argument>
        </command>  <!-- set logging disable -->

        <!-- ==================== -->

        <!-- set logging enable -->
        <command>
            <name>enable</name>
            <help>Enable logging subsystem</help>
            <handler>tpHandleSetLoggingEnable</handler>
            <argument>
                <name>!&lt;cr&gt;</name>
                <help>Enable logging subsystem</help>
            </argument>
        </command>  <!-- set logging enable -->

        <!-- ==================== -->
    
        <!-- set logging filter -->
        <command>
            <name>filter</name>
            <help>Configures the logging filter</help>
            <description>
                This command enables a specific set of log categories and
                levels in a single command. It is a short-cut command that
                can be used instead of multiple 'set logging category' and
                'set logging level' commands. See those commands for more
                information.
            </description>
            <handler>tpHandleSetLoggingFilter</handler>

            <!-- set logging filter <categories> -->
            <argument>
                <name>!&lt;categories&gt;</name>
                <help>Comma-delimited list of categories, 'all' or 'help'</help>
        
                <!-- set logging filter <categories> <levels> -->
                <argument>
                    <name>!&lt;levels&gt;</name>
                    <help>Comma-delimited list of levels, 'all' or 'help'</help>
                    <argument>
                        <name>!&lt;cr&gt;</name>
                        <help>Configure the logging filter</help>
                    </argument>
                </argument> <!-- levels -->
            </argument> <!-- categories -->
        </command>  <!-- end set logging filter -->

        <!-- ==================== -->
    
        <!-- set logging level -->
        <command>
            <name>level</name>
            <help>Enable or disable specific logging levels</help>
            <description>
                Log messages generated by the FocalPoint API have a severity
                level associated with them. Each level may be individually
                enabled or disabled. Use the 'set logging level help' command 
                to display a list of valid level keywords. The ALOS system of 
                the FocalPoint API defines logging levels of the form, 
                "FM_LOG_LEVEL_XXXXX," where "XXXXX" corresponds to the level
                keyword used in these commands. See the Log Levels section of
                the FocalPoint Software API user guide for a description of 
                each level. Multiple levels may be specified at once, 
                delimited by commas (no spaces).
            </description>
            <handler>tpHandleSetLoggingLevel</handler>
    
            <!-- set logging level enable -->
            <argument>
                <name>enable</name>
                <help>Enable logging levels</help>

                <!-- set logging level enable <levels> -->
                <argument>
                    <name>!&lt;levels&gt;</name>
                    <help>Comma-delimited list of levels or 'all'</help>
                    <argument>
                        <name>!&lt;cr&gt;</name>
                        <help>Enable specified logging levels</help>
                    </argument>
                </argument> <!-- <levels> -->
            </argument> <!-- end set logging level enable -->
    
            <!-- set logging level disable -->
            <argument>
                <name>disable</name>
                <help>Disable logging levels</help>

                <!-- set logging level disable <levels> -->
                <argument>
                    <name>!&lt;levels&gt;</name>
                    <help>Comma-delimited list of levels or 'all'</help>
                    <argument>
                        <name>!&lt;cr&gt;</name>
                        <help>Disable specified logging levels</help>
                    </argument>
                </argument> <!-- <levels> -->
            </argument> <!-- end set logging level disable -->
  
            <!-- set logging level help -->
            <argument>
                <name>help</name>
                <help>Display valid logging levels</help>
                <argument>
                    <name>!&lt;cr&gt;</name>
                    <help>Display valid logging levels</help>
                </argument>
            </argument> <!-- end set logging level help -->
        </command>  <!-- end set logging level -->

    </command>  <!-- end set logging -->

</command> <!-- end set -->


<!-- show -->
<command>
    <name>show</name>

    <!-- show logging -->
    <command>
        <name>logging</name>
        <help>Display state of logging subsystem</help>
        <handler>tpHandleShowLogging</handler>
        <argument>
            <name>!&lt;cr&gt;</name>
            <help>Display state of logging subsystem</help>
        </argument>
    </command>  <!-- end show logging -->

</command>  <!-- end show -->

</config>
