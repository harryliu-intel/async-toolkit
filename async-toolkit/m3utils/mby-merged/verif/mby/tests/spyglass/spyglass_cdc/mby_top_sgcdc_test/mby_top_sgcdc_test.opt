             ],
   
         -post_process_pattern_file => "$ENV{ACE_HOME}/udf/ace_base_postsim.pp",
         -spyglass_post_process_modes => "AceSpyglassCDC_default,AceCDCLint_default",
              -ok_error => ['/\s+0 Errors/',
                      '/\s+0 Fatals/'
        ],
         
	-spyglass_exe_opts => [
         'set env(TOP) mby_top',
         'set_option projectwdir .',   
         'set_option enable_save_restore no',
         'set_option sgsyn_loop_limit 8192',
				],
   );
