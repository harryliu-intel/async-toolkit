<config>

<!-- create -->
<command>
    <name>create</name>

    <!-- create switch -->
    <command>
    	<!-- Only add ones that are tested for now -->
        <filter type="platform">
            <allow>fm85xxep,fibmNIC,monaco</allow>
        </filter>

        <name>switch</name>
        <help>Manually insert a switch</help>
        <handler>handleInsertSwitch</handler>

        <!-- create switch <switch> -->
        <argument>
            <name>!&lt;switch&gt;</name>
            <help>The switch number to operate</help>
            <argument>
                <name>!&lt;cr&gt;</name>
                <help>Manually insert the given switch</help>
            </argument>
        </argument> <!-- <switch> -->
    </command>  <!-- end create switch -->
</command>  <!-- end create -->

<!-- del -->
<command>
    <name>del</name>

    <!-- del switch -->
    <command>
        <filter type="platform">
            <allow>fm85xxep,fibmNIC,monaco</allow>
        </filter>

        <name>switch</name>
        <help>Manually remove a switch</help>
        <handler>handleRemoveSwitch</handler>

        <!-- del switch <switch> -->
        <argument>
            <name>!&lt;switch&gt;</name>
            <help>The switch number to operate</help>
            <argument>
                <name>!&lt;cr&gt;</name>
                <help>Manually remove the given switch</help>
            </argument>
        </argument> <!-- <switch> -->
    </command>  <!-- end del switch -->
</command>  <!-- end del -->

<!-- show -->
<command>
    <name>show</name>

    <!-- show switch -->
    <command>
        <name>switch</name>

        <!-- show switch stats -->
        <command>
            <name>stats</name>

            <!-- show switch stats fibm -->
            <command>
                <filter type="platform">
                    <allow>fm85xxep,fibmNIC,monaco</allow>
                </filter>

                <name>fibm</name>
                <help>Show fibm statistics</help>
                <handler>handleShowFibmStats</handler>

                <!-- show switch stats fibm <switch> -->
                <argument>
                    <name>!&lt;switch&gt;</name>
                    <help>The switch number to operate</help>
                    <argument>
                        <name>!&lt;cr&gt;</name>
                        <help>Show fibm statistics for the given switch(es)</help>
                    </argument>
                </argument> <!-- <switch> -->
            </command>  <!-- end show switch stats fibm -->
        </command>  <!-- end show switch stats -->
    </command>  <!-- end show switch -->
</command>  <!-- end show -->

<!-- reset -->
<command>
    <name>reset</name>

    <!-- reset switch -->
    <command>
        <name>switch</name>

        <!-- reset switch stats -->
        <command>
            <!-- fibm is the only "reset switch stats" subcommand that is defined,
                  so we have to filter "reset switch stats" as well as well, to keep
                  it from showing up in the help text. -->
            <filter type="platform">
                <allow>fm85xxep,fibmNIC,monaco</allow>
            </filter>

            <name>stats</name>
            <help>Reset switch statistics</help>

            <!-- reset switch stats fibm -->
            <command>
                <filter type="platform">
                    <allow>fm85xxep,fibmNIC,monaco</allow>
                </filter>

                <name>fibm</name>
                <help>Reset fibm statistics</help>
                <handler>handleResetFibmStats</handler>

                <!-- reset switch stats fibm <switch> -->
                <argument>
                    <name>!&lt;switch&gt;</name>
                    <help>The switch number to operate</help>
                    <argument>
                        <name>!&lt;cr&gt;</name>
                        <help>Reset fibm statistics for the given switch(es)</help>
                    </argument>
                </argument> <!-- <switch> -->
            </command>  <!-- end reset switch stats fibm -->
        </command>  <!-- end reset switch stats -->
    </command>  <!-- end reset switch -->
</command>  <!-- end reset -->

</config>
