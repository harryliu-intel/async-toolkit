# $Id$ 

ifdef CM3
M3BUILDPROGRAM=cm3
M3BUILDOPTS= -override
M3BUILDCLEANTARGET= -clean
M3SHIPPROGRAM=cm3
M3SHIPOPTS=-ship
else
M3BUILDPROGRAM=m3build
M3BUILDOPTS= -O
M3BUILDCLEANTARGET= clean
M3SHIPPROGRAM=m3ship
M3SHIPOPTS=
endif

ifdef SHIP
M3SHIP=$(M3SHIPPROGRAM) $(M3SHIPOPTS)
else
M3SHIP= echo
endif

M3BUILD= $(M3BUILDPROGRAM) $(M3BUILDOPTS)
M3BUILDCLEAN= $(M3BUILD) $(M3BUILDCLEANTARGET)
