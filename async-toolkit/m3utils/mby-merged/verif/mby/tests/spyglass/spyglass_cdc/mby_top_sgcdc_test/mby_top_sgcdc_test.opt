{
  $ENV{CDC_TOP} = "top";  
  $ENV{TOP} = "mby_rtl_lib.mby_top";  
  $ENV{SIG2CFG} = "$ENV{MODEL_ROOT}/src/rtl/$ENV{CDC_TOP}/tools/visa/$ENV{CDC_TOP}_sig2cfg.visa";
$ENV{SPYGLASS_CDC_SETUP_CHECK_GOAL_OVERRIDE} = "/p/hdk/rtl/proj_tools/sg_overrides/master/1.00.00.beta01/sgcdc/cdc_setup_check_Override.spq";
  %opts = (
         -model          => "mby",
         -static_check_top        => "mby_rtl_lib.mby_top",
         -static_check_tools      => [ "spyglass", ],
         -enable_spyglass_group_run => 0,

         -spyglass_goals      => [ 
               #"cdc/cdc_setup_check",
               #"cdc/cdc_verify_struct",
         ],

         -spyglass_ctrl_files => [
              "verif/$ENV{DUT}/tests/spyglass/spyglass_cdc/$ENV{DUT}_top_sgcdc_test/$ENV{DUT}_top.sgdc",
         ], 

         -spyglass_awl_waiver_files => [
